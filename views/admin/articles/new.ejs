<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
    <body>
        <div class="container">
            <br>
            <div class="card">
                <div class="card-header">
                    <h2>Novo Artigo</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/categories/save">
                        <input class="form-control" type="text" name="title"
                            placeholder="Defina o tÃ­tulo do artigo">
                        <br>
                        <label for="categoriaID">Categoria</label>
                        <select name="categoriaID" id="categoriaID" class="form-control">
                            <% categories.forEach((category) =>{ %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% }); %>
                        </select>
                        <br>
                        <textarea placeholder="Informe o artigo" name="artigo" id="artigo" cols="30" rows="15" class="form-control"></textarea>
                        <br>
                        <button class="btn btn-primary">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
<%- include("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#artigo",
        plugins: [
            "advlist autolink link image lists print preview hr search replace wordcount fullscreen insertdatetime media save table paste emoticons"
        ]
    });
</script>
